<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultActivity"
        android:orientation="horizontal">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="509dp"
            android:layout_height="298dp">

        <ListView
                android:id="@+id/listViewResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="208dp">

        </ListView>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="208dp"
            android:orientation="vertical">

        <Button
                android:id="@+id/buttonSelectAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_buttonSelectAll" />

        <Button
                android:id="@+id/buttonDeselectAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_buttonDeselectAll" />

        <Button
                android:id="@+id/buttonPrintAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_buttonPrintAll" />

        <Button
                android:id="@+id/buttonBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_buttonBack"
                android:minHeight="48dp" />

    </LinearLayout>

</LinearLayout>